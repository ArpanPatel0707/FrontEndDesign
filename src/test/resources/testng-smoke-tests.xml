<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="Spec Tool Test Automation Smoke Suite">
<listeners>
        <listener class-name="com.ats.qa.listener.report.ExtentReportListener"/>
        <listener class-name="com.ats.qa.listener.TestListeners"/>
    </listeners>


    <test name="Spec Tool Test Cases" preserve-order="true">

        <groups>
             <run>
                <include name = "Spec-tool Smoke Testing" />
                <include name = "Always Run Regression Testing" />
                  <include name = "Always Run Smoke Testing" />
             </run>
          </groups>
          <classes> 
              <class name="com.ats.qa.spec.testcases.ManageProjectsPageTestST"></class>    
            <class name="com.ats.qa.spec.testcases.ManageSpecsPageTestST"></class>
        
           
            <class name="com.ats.qa.spec.testcases.ManageMastersPageTestST"></class>
            <class name="com.ats.qa.spec.testcases.LoginPageTestST"></class>  
          
          	<class name="com.ats.qa.spec.testcases.ManageTestProjectsPageTestST"></class>
            <class name="com.ats.qa.spec.testcases.DashBoardPageTestST"></class>  
            <class name="com.ats.qa.spec.testcases.MyContactsPageTest"></class>
            <class name="com.ats.qa.spec.testcases.SettingsPageTestST"></class>
         
        </classes>
    </test>
</suite>
